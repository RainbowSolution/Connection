<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_50sdp"
        android:background="@drawable/button_shape"
        android:paddingBottom="@dimen/_20sdp">


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvsuccessfullycabBookId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_70sdp"
            android:fontFamily="@font/rubik_regular"
            android:gravity="center"
            android:text="@string/rahul_maheswari"
            android:textColor="#fff"
            android:textSize="@dimen/_16sdp"
            android:textStyle="normal" />

        <LinearLayout
            android:id="@+id/lidrivernameId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvsuccessfullycabBookId"
            android:layout_marginTop="10sp"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:weightSum="3">

            <RelativeLayout
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10sp"
                android:layout_weight="1.3">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="?attr/selectableItemBackground"
                    android:fontFamily="@font/rubik_light"
                    android:gravity="right"
                    android:padding="5dp"
                    android:text="@string/car_name"
                    android:textColor="@color/ColorWhite"
                    android:textSize="@dimen/_11sdp"
                    android:textStyle="bold"
                    tools:ignore="RtlHardcoded" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5sp"
                android:layout_weight="0.2">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="@string/as"
                    android:textColor="#fff"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5sp"
                android:layout_weight="1.3">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvdrivernameId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="?attr/selectableItemBackground"
                    android:fontFamily="@font/rubik_light"
                    android:gravity="left"
                    android:padding="5dp"
                    android:text="@string/toyota_avensis"
                    android:textColor="#fff"
                    android:textSize="@dimen/_11sdp"
                    android:textStyle="bold"
                    tools:ignore="RtlHardcoded" />


            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/vehicalnoId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lidrivernameId"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:weightSum="3">

            <RelativeLayout
                android:id="@+id/rlcontactId"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10sp"
                android:layout_weight="1.3">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvcontactId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="?attr/selectableItemBackground"
                    android:fontFamily="@font/rubik_light"
                    android:gravity="right"
                    android:padding="5dp"
                    android:text="@string/vehicle_no"
                    android:textColor="@color/ColorWhite"
                    android:textSize="@dimen/_11sdp"
                    android:textStyle="bold"
                    tools:ignore="RtlHardcoded" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5sp"
                android:layout_weight="0.2">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="@string/as"
                    android:textColor="#fff"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlbookId"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5sp"
                android:layout_weight="1.3">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvbookId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="?attr/selectableItemBackground"
                    android:fontFamily="@font/rubik_light"
                    android:gravity="left"
                    android:padding="5dp"
                    android:text="@string/mp_09_tc_8526"
                    android:textColor="#fff"
                    android:textSize="@dimen/_11sdp"
                    android:textStyle="bold"
                    tools:ignore="RtlHardcoded" />


            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/limobileNumberId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vehicalnoId"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:weightSum="3">

            <RelativeLayout
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10sp"
                android:layout_weight="1.3">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="?attr/selectableItemBackground"
                    android:fontFamily="@font/rubik_light"
                    android:gravity="right"
                    android:padding="5dp"
                    android:text="Mobile No."
                    android:textColor="@color/ColorWhite"
                    android:textSize="@dimen/_11sdp"
                    android:textStyle="bold"
                    tools:ignore="RtlHardcoded" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5sp"
                android:layout_weight="0.2">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="@string/as"
                    android:textColor="#fff"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5sp"
                android:layout_weight="1.3">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="?attr/selectableItemBackground"
                    android:fontFamily="@font/rubik_light"
                    android:gravity="left"
                    android:padding="5dp"
                    android:text="@string/_91_7415882263"
                    android:textColor="#fff"
                    android:textSize="@dimen/_11sdp"
                    android:textStyle="bold"
                    tools:ignore="RtlHardcoded" />


            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/limobileNumberId"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/ivacceptionId"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_28sdp"
                android:background="@drawable/white_rounded_btn"
                android:text="@string/chat_now"
                android:textAllCaps="false"
                android:textSize="@dimen/_11sdp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/acbViewMapId"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_28sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:background="@drawable/white_corner_rounded_btn"
                android:text="@string/view_map"
                android:textAllCaps="false"
                android:textColor="@color/ColorWhite"
                android:textSize="@dimen/_11sdp" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivcrossId"
            android:layout_width="@dimen/_13sdp"
            android:layout_height="@dimen/_14sdp"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/_10sdp"
            android:src="@drawable/cross" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_15sdp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/_95sdp"
            app:civ_border_width="@dimen/_2sdp"
            app:civ_border_color="@color/ColorWhite"
            android:layout_height="@dimen/_95sdp"
            android:src="@drawable/deriver_image" />


    </RelativeLayout>


</RelativeLayout>