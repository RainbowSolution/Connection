<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/appback">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvotpId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:fontFamily="@font/rubik_light"
            android:gravity="center"
            android:text="@string/enter_4_digit_code"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_28sdp"
            android:textStyle="normal" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/TvdummytextId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvotpId"
            android:layout_marginStart="@dimen/_26sdp"
            android:layout_marginEnd="@dimen/_26sdp"
            android:fontFamily="@font/rubik_medium"
            android:gravity="center"
            android:letterSpacing="0.1"
            android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry."
            android:textColor="@color/ColorWhite"
            android:textSize="@dimen/_9sdp"
            android:textStyle="normal" />


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TvdummytextId"
            android:layout_marginStart="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginEnd="@dimen/_25sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="10sp"
            app:cardElevation="5sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="@dimen/_20sdp"
                android:paddingBottom="@dimen/_20sdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_5sdp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilNameId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etOtpUpId"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/rubik_medium"
                            android:hint="@string/enter_otp"
                            android:inputType="number"
                            android:maxLength="6"
                            android:singleLine="true"
                            android:textSize="14sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivNameId"
                        android:layout_width="22sp"
                        android:layout_height="22sp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="@dimen/_13sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:padding="3sp"
                        android:src="@drawable/whitelock" />


                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/rlResendVerifyId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivResendVerifyId"
                            android:layout_width="@dimen/_11sdp"
                            android:layout_height="@dimen/_11sdp"
                            android:layout_centerVertical="true"
                            android:padding="@dimen/_1sdp"
                            android:src="@drawable/resend" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_2sdp"
                            android:layout_toEndOf="@+id/ivResendVerifyId"
                            android:fontFamily="@font/rubik_medium"
                            android:singleLine="true"
                            android:text="@string/resend_otp"
                            android:textSize="@dimen/_10sdp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rlEditNumberVerifyId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivEditNumberVerifyId"
                            android:layout_width="@dimen/_11sdp"
                            android:layout_height="@dimen/_11sdp"
                            android:layout_centerVertical="true"
                            android:padding="@dimen/_1sdp"
                            android:src="@drawable/edit" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_2sdp"
                            android:layout_toEndOf="@+id/ivEditNumberVerifyId"
                            android:fontFamily="@font/rubik_medium"
                            android:singleLine="true"
                            android:text="@string/edit_number"
                            android:textSize="@dimen/_10sdp" />
                    </RelativeLayout>
                </LinearLayout>


                <RelativeLayout
                    android:id="@+id/rlResendTagOtpId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:visibility="visible"
                    tools:ignore="RtlHardcoded">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvResendTimerOtpId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_toStartOf="@+id/tvResendOtpId"
                        android:fontFamily="@font/rubik_regular"
                        android:text="@string/_00_30"
                        android:textSize="14sp"
                        tools:ignore="UnknownId" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rlVerifyOtpVerityId"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_12sdp"
                    android:layout_marginBottom="@dimen/_30sdp"
                    android:background="@drawable/btnback">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvEnterOtpId"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?android:attr/selectableItemBackground"
                        android:fontFamily="@font/rubik_medium"
                        android:gravity="center"
                        android:padding="12dp"
                        android:text="@string/verify_otp"
                        android:textColor="@color/ColorWhite"
                        android:textSize="16sp" />

                </RelativeLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </RelativeLayout>


</RelativeLayout>

