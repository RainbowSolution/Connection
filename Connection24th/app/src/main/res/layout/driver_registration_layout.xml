<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ColorWhite">


    <RelativeLayout
        android:id="@+id/rlHomeToolbarId"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="@drawable/hometoolbar"
        android:visibility="gone">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivbackId"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:padding="@dimen/_5sdp"
            android:scaleType="fitXY"
            android:src="@drawable/back_white_icon"
            android:visibility="gone" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/submit_your_details"
            android:textAllCaps="true"
            android:textColor="@color/ColorWhite"
            android:textSize="@dimen/_14sdp"
            android:visibility="visible">

        </androidx.appcompat.widget.AppCompatTextView>


    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rlHomeToolbarId"
        android:scrollbars="none">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rluserprofileID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/RlUserProfileId"
                android:layout_marginTop="@dimen/_35sdp"
                tools:ignore="UnknownIdInLayout">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivuserprofileimageId"
                    android:layout_width="100dp"
                    android:layout_height="100sp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5sp"
                    android:layout_marginEnd="15sp"
                    android:src="@drawable/profile"
                    app:civ_border_color="@color/ColorGray"
                    app:civ_border_width="@dimen/_1sdp"
                    app:civ_circle_background_color="@color/ColorGray" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ivuserprofileimageId"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/rubik_light"
                    android:text="@string/change_user_profile_photo"
                    android:textColor="@color/TextColor"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="normal" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/registrationId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rluserprofileID"
                android:orientation="vertical"
                android:layout_margin="@dimen/_10sdp"
                android:paddingTop="@dimen/_20sdp"
                android:paddingBottom="@dimen/_10sdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilNameId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etfullNameSId"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/rubik_regular"
                            android:hint="@string/full_name"
                            android:paddingEnd="@dimen/_25sdp"
                            android:singleLine="true"
                            android:textSize="12sp"
                            tools:ignore="RtlSymmetry" />

                    </com.google.android.material.textfield.TextInputLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilvehicleNameId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etVehicleNameId"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/rubik_regular"
                            android:hint="@string/vehicle_name"
                            android:inputType="text"
                            android:paddingEnd="@dimen/_25sdp"
                            android:singleLine="true"
                            android:textSize="12sp"
                            tools:ignore="RtlSymmetry" />


                    </com.google.android.material.textfield.TextInputLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilvehiclenumberId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etVehicleNumberId"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/rubik_regular"
                            android:hint="@string/vehicle_no"
                            android:paddingEnd="@dimen/_25sdp"
                            android:singleLine="true"
                            android:textSize="12sp"
                            tools:ignore="RtlSymmetry" />


                    </com.google.android.material.textfield.TextInputLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tildriverlicenseId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etDriverLicenceId"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/rubik_regular"
                            android:hint="@string/driver_license"
                            android:paddingEnd="@dimen/_25sdp"
                            android:singleLine="true"
                            android:textSize="12sp"
                            tools:ignore="RtlSymmetry" />


                    </com.google.android.material.textfield.TextInputLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_18sdp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvchangepassID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rubik_regular"
                        android:text="@string/upload_the_following_things_required"
                        android:textSize="@dimen/_10sdp"
                        android:textStyle="normal" />


                    <LinearLayout
                        android:id="@+id/lirequirmentId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvchangepassID"
                        android:orientation="horizontal"
                        android:weightSum="3">


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvVehiclePhotoId"
                            android:layout_width="0sp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_weight="1"
                            android:fontFamily="@font/rubik_italic"
                            android:text="@string/_01_vehicle_photo"
                            android:textSize="@dimen/_10sdp"
                            android:textStyle="normal" />


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvPoliceVeriCertifiId"
                            android:layout_width="0sp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_weight="3"
                            android:fontFamily="@font/rubik_italic"
                            android:text="02: police verification certification"
                            android:textSize="@dimen/_10sdp"
                            android:textStyle="normal"
                            tools:ignore="HardcodedText" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lirequirmentId"
                        android:orientation="horizontal"
                        android:weightSum="3">


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvPermitPhotoId"
                            android:layout_width="0sp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:fontFamily="@font/rubik_italic"
                            android:text="@string/_03_permit"
                            android:textSize="@dimen/_10sdp"
                            android:textStyle="normal" />


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvRcPhotoId"
                            android:layout_width="0sp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_weight="3"
                            android:fontFamily="@font/rubik_italic"
                            android:text="04: Rc (Registration Certification)"
                            android:textSize="@dimen/_10sdp"
                            android:textStyle="normal"
                            tools:ignore="HardcodedText" />

                    </LinearLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivVehiclePhotoId"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_34sdp"
                        android:background="@drawable/file_uplode" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivPoliceCertificationId"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_34sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_toEndOf="@+id/ivVehiclePhotoId"
                        android:background="@drawable/file_uplode" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivPermitPhotoId"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_34sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_toEndOf="@+id/ivPoliceCertificationId"
                        android:background="@drawable/file_uplode" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivRcId"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_34sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_toEndOf="@+id/ivPermitPhotoId"
                        android:background="@drawable/file_uplode" />


                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rlsubmitId"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_below="@+id/registrationId"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_marginRight="@dimen/_12sdp"
                android:layout_marginBottom="10sp"
                android:background="@drawable/btnback">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?android:attr/selectableItemBackground"
                    android:fontFamily="@font/rubik_regular"
                    android:gravity="center"
                    android:padding="12dp"
                    android:text="@string/submit"
                    android:textColor="@color/ColorWhite"
                    android:textSize="16sp" />

            </RelativeLayout>


        </RelativeLayout>
    </ScrollView>

</RelativeLayout>