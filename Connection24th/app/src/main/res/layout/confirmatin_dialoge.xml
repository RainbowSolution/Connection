<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/logout"
    app:cardCornerRadius="12sp"
    app:cardElevation="2sp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10sp">


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivDeleteCloseId"
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/cross" />


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivlogoutImgId"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_below="@+id/ivDeleteCloseId"
            android:layout_centerHorizontal="true"
            android:src="@drawable/error" />



        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvDeleteid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivlogoutImgId"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:lineSpacingExtra="5sp"
            android:text="@string/do_you_want_to_delete_account"
            android:textColor="@color/ColorWhite"
            android:textSize="15sp" />

        <RelativeLayout
            android:id="@+id/rlDeleteId"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvDeleteid"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="15sp"
            android:layout_marginRight="20sp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/button_shape_main_a"
            android:padding="5dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/rubik_light"
                android:gravity="center"
                android:text="@string/delete"
                android:textColor="@color/logout"
                android:textStyle="bold" />
        </RelativeLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>
